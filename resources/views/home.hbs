<h2>Danh sách lớp học</h2>
<table>
    <tr>
        <th>Môn học</th>
        <th>Nhóm</th>
        <th>Phòng học</th>
        <th>Giảng viên</th>
        <th>Bắt đầu</th>
        <th>Kết thúc</th>
        <th>Sĩ số</th>
        <th></th>
    </tr>
    {{#each classes}}
    <tr>
        <td>{{this.monhoc}}</td>
        <td>{{this.nhom}}</td>
        <td>{{this.phonghoc}}</td>
        <td>{{this.giangvien}}</td>
        <td>{{formatDate this.start}}</td>
        <td>{{formatDate this.end}}</td>
        <td>{{this.siso}}</td>
        <td style="display: flex; justify-content: space-between;">
            <a href="/addSinhVien/{{this._id}}">Thêm sinh viên</a>
            <a href="/danhsach/{{this._id}}">Điểm danh</a>
        </td>
    </tr>
    {{/each}}
</table>
<a class="custom-button" href="/addClass">Tạo lớp học</a>